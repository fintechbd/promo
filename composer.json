{
    "name": "fintech/promo",
    "description": "This is my package promo",
    "keywords": [
        "fintech",
        "laravel",
        "promo"
    ],
    "homepage": "https://github.com/fintech/promo",
    "license": "MIT",
    "authors": [
        {
            "name": "Mohammad Hafijul Islam",
            "email": "hafijul233@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "fintech/core": "*",
        "illuminate/contracts": "^12.0||^11.0",
        "owen-it/laravel-auditing": "^14.0||^13.5"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.0||^7.9",
        "larastan/larastan": "^2.9||^3.0",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.3||^2.0",
        "phpstan/phpstan-deprecation-rules": "^1.1||^2.0",
        "phpstan/phpstan-phpunit": "^1.3||^2.0"
    },
    "autoload": {
        "psr-4": {
            "Fintech\\Promo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fintech\\Promo\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Fintech\\Promo\\PromoServiceProvider"
            ],
            "aliases": {
                "Promo": "Fintech\\Promo\\Facades\\Promo"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
